<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_chbox_name1"
        android:summaryOff="Location Not Saved"
        android:summaryOn="Saved Location"
        android:title="Location1" />
    <EditTextPreference
        android:defaultValue="Empty Location Name"
        android:dependency="ch_loc_1"
        android:key="@string/pref_location_name1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_location_name1_default"
        android:title="Location Name" />
    <EditTextPreference
        android:defaultValue="Empty Location ID"
        android:dependency="ch_loc_1"
        android:key="et_location_id1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Location ID" />
</PreferenceScreen>